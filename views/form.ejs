<!DOCTYPE html>
<html>

<head>
    <title>Quản lý biểu mẫu</title>
    <meta name="application-name" content="AutoForm">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">

    <link rel="stylesheet" href="/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/global-style.css">
    <link rel="stylesheet" href="/stylesheets/style/pure-min.css">
    <link rel="stylesheet" href="/stylesheets/form-management.css">

    <script src="/javascripts/jquery.color.js" type="text/javascript"></script>
    <script src="/javascripts/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="/javascripts/form.js"></script>
</head>

<body>
    <div class="container">

        <!-- MENU -->
        <div class="left">
            <ul class="pure-menu-list menu">
                <li class="pure-menu-item menu-item">

                    <a href="/admin" class="pure-menu-link">
                        <i class="fa fa-bar-chart" aria-hidden="true"></i>Dashboard
                    </a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/account" class="pure-menu-link">
                        <i class="fa fa-users" aria-hidden="true"></i>Quản lý tài khoản</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/field" class="pure-menu-link">
                        <i class="fa fa-info-circle" aria-hidden="true"></i>Trường thông tin</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/form" class="pure-menu-link">
                        <i class="fa fa-book" aria-hidden="true"></i>Quản lý biểu mẫu</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/location" class="pure-menu-link">
                        <i class="fa fa-globe" aria-hidden="true"></i>Quản lý vùng</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/organization" class="pure-menu-link">
                        <i class="fa fa-building" aria-hidden="true"></i>Quản lý tổ chức</a>
                </li>

            </ul>
        </div>
        <div class="right">
            <div class="header">
                <div class="page-name">
                    <h2>Auto form</h2>
                </div>
                <div class="user">
                    <ul class="nav">
                        <li class="nav-user">
                            <a href="#">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <i class="fa fa-sort-desc" aria-hidden="true"></i>
                            </a>
                            <ul class="drop-down">
                                <li>
                                    <i class="fa fa-address-card-o" aria-hidden="true"></i>
                                    <a href="#">Tài khoản</a>
                                </li>
                                <li>
                                    <i class="fa fa-cog" aria-hidden="true"></i>
                                    <a href="#">Cài đặt</a>
                                </li>
                                <li>
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    <a href="#">Đăng xuất</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="main">
                <!-- SEARCH -->
                <div class="search">
                    <div class="search-header">
                        <a>Tìm kiếm
                            <i class="fa fa-angle-down" aria-hidden="true"></i>
                        </a>
                    </div>
                    <div class="search-content">
                        <form class="pure-form pure-form-aligned search-form">
                            <fieldset>
                                <div class="pure-g">
                                    <div class="pure-u-1-3">
                                        <label for="city">Tỉnh/Thành phố</label>
                                        <select id="city">
                                            <% cities.forEach(function(item){
                                                var selected=(item.name=="Hà Nội")?"selected":""%>
                                                <option <%=selected%>><%=item.name %></option>
                                            <%}) %>
                                        </select>
                                    </div>
                                    <div class="pure-u-1-3">
                                        <label for="district">Quận/Huyện</label>
                                        <select id="district">
                                            <option disabled selected>-- Chọn quận/huyện --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="pure-g">
                                    <div class="pure-u-3-5">
                                        <label for="organization">Tổ chức</label>
                                        <select id="organization">
                                            <option disabled selected>-- Chọn tổ chức --</option>
                                        </select>
                                        <button type="button" class="pure-button pure-button-primary search-button">Tìm kiếm</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>

                <!-- FORMS -->
                <div class="forms">

                    <!-- FORMS CONTENT -->
                    <div class="form-content">

                        <!-- FORM INFO -->
                        <div class="form-info">
                            <form class="reverse">
                                <input class="view-code" type="checkbox">Hiển thị code
                            </form>

                            <div class="features">
                                <style scoped>
                                    .button-success,
                                    .button-error,
                                    .button-warning,
                                    .button-secondary {
                                        color: white;
                                        border-radius: 4px;
                                        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
                                    }
                                    
                                    .button-error {
                                        background: rgb(202, 60, 60);
                                        /* this is a maroon */
                                    }
                                </style>
                                <button class="pure-button pure-button-primary save-button">Lưu</button>
                                <button class="pure-button button-error delete-button">Xóa</button>
                            </div>
                        </div>

                        <!-- FORM DETAIL -->
                        <div class="form-detail" contenteditable='true'>
                        </div>


                    </div>

                    <!-- FORMS LIST AND ADD NEW FORM-->
                    <div class="form-list">

                        <!--ADD NEW FORM -->
                        <div class="new-form">
                            <div class="add-header">
                                <a>Thêm biểu mẫu
                            <i class="fa fa-angle-down" aria-hidden="true"></i>
                                </a>
                            </div>
                            <form class="pure-form pure-form-stacked add-form">
                                <fieldset>
                                    <label for="name">Tên form</label>
                                    <input id="name" type="text" placeholder="Name">

                                    <label for="org">Tổ chức/Doanh nghiệp</label>
                                    <select id="org">
                                        <% orgs.forEach(function(item){%>
                                            <option><%=item.name%></option>
                                       <% });%>
                                    </select>
                                    <label>Đường dẫn file</label>
                                    <label class="file" for="file-dir">Choose a file</label>
                                    <input type="file" id="file-dir">

                                    <button type="button" class="pure-button pure-button-primary add-button">Thêm</button>
                                </fieldset>
                            </form>
                        </div>

                        <!-- FORM LIST -->
                        <div class="pure-menu custom-restricted-width form-list-detail">
                            <span class="pure-menu-heading">Danh sách biểu mẫu</span>
                            <ul class="pure-menu-list">
                                <% forms.forEach(function(item){ %>
                                    <li class="pure-menu-item">
                                        <a class="pure-menu-link form-item" data-form-id="<%=item._id %>">
                                            <%=item.name%>
                                        </a>
                                    </li>
                                    <%});%>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>

</html>