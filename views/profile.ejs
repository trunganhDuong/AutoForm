<!DOCTYPE html>
<html>

<head>
    <title>Quản lý profile</title>
    <meta name="application-name" content="AutoForm">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/global-style.css">
    <link rel="stylesheet" href="/stylesheets/style/pure-min.css">
    <link rel="stylesheet" href="/stylesheets/profile-style.css">

    <script src="/javascripts/jquery.color.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.js" type="text/javascript"></script>
    <script src="/javascripts/profile.js" type="text/javascript"></script>
    <script src="/javascripts/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>

    <script>
        
    </script>
</head>

<body>
    <div class="container">
        <!-- MENU -->
        <div class="left">

            <ul class="pure-menu-list menu">
                <li class="pure-menu-item menu-item">
                    <a href="/home" class="pure-menu-link">
                        <i class="fa fa-home" aria-hidden="true"></i> Trang chủ
                    </a>
                </li>
                <li class="pure-menu-item menu-item">

                    <a href="/profile" class="pure-menu-link">
                        <i class="fa fa-address-book" aria-hidden="true"></i> Quản lý profile</a>
                </li>
                <li class="pure-menu-item menu-item">

                    <a href="#" class="pure-menu-link">
                        <i class="fa fa-history" aria-hidden="true"></i> Lịch sử</a>
                </li>
                <li class="pure-menu-item menu-item">

                    <a href="#" class="pure-menu-link">
                        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Báo cáo</a>
                </li>

            </ul>

        </div>

        <!-- MAIN CONTENT -->
        <div class="right">

            <!-- HEADER -->
            <div class="header">
                <div class="page-name">
                    <h2>Auto form</h2>
                </div>
                <div class="user">
                    <ul class="nav">
                        <li class="nav-user">
                            <a href="#">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <i class="fa fa-sort-desc" aria-hidden="true"></i>
                            </a>
                            <ul class="drop-down">
                                <li>
                                    <i class="fa fa-address-card-o" aria-hidden="true"></i>
                                    <a href="#">Tài khoản</a>
                                </li>
                                <li>
                                    <i class="fa fa-cog" aria-hidden="true"></i>
                                    <a href="#">Cài đặt</a>
                                </li>
                                <li>
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    <a href="#">Đăng xuất</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- MAIN -->
            <div class="main">
                <div class="profiles">

                    <!-- NEW PROFILE -->
                    <div class="new-profile">
                        <form class="pure-form">
                            <fieldset>
                                <input id="profile-name" type="text" placeholder="Tên profile">
                                <button type="button" class="pure-button pure-button-primary add-button">Thêm</button>
                            </fieldset>
                        </form>
                    </div>

                    <!-- LIST OF PROFILES -->
                    <div class="profile-list">
                        <div class="pure-menu custom-restricted-width">
                            <span class="pure-menu-heading">Danh sách profile</span>

                            <ul class="pure-menu-list">
                                <%if(profs){%>
                                    <%profs.forEach(function(prof){%>
                                        <li class="pure-menu-item prof-item"><a data-id="<%=prof._id%>" class="pure-menu-link"><%=prof.name%></a></li>
                                    <%})%>
                                <%} %>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- PROFILE CONTENT -->
                <div class="profile-content">

                    <!-- PROPERTIES LIST -->
                    <div class="properties">
                        <div class="pure-menu custom-restricted-width">
                            <span class="pure-menu-heading">Danh sách thuộc tính</span>

                            <ul class="pure-menu-list property-list">
                               <% if(fields){%>
                                   <%fields.forEach(function(field){%>
                                        <li id="<%=field.sName%>" class="pure-menu-item prop-item" data-id="<%=field._id%>" data-sname="<%=field.sName%>"><a class="pure-menu-link"><%=field.name%></a></li>
                                   <%});%>
                               <%} %>
                            </ul>
                        </div>
                    </div>

                    <!-- PROPERTIES VALUE -->
                    <div class="property-value">

                        <!-- FEATURES -->
                        <div class="info-and-features">
                            <div class="info">
                                <p class="pro-name"></p>
                            </div>

                            <div class="features">
                                <style scoped>
                                    .button-success,
                                    .button-error,
                                    .button-warning,
                                    .button-secondary {
                                        color: white;
                                        border-radius: 4px;
                                        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
                                    }
                                    
                                    .button-error {
                                        background: rgb(202, 60, 60);
                                        /* this is a maroon */
                                    }
                                    
                                    .button-warning {
                                        background: rgb(223, 117, 20);
                                        /* this is an orange */
                                    }
                                </style>
                                <a class="pure-button pure-button-primary save-button">Lưu</a>
                                <a class="button-error pure-button cancel-button">Hủy</a>
                                <a class="button-warning pure-button delete-button">Xóa</a>
                            </div>
                        </div>

                        <!-- DETAIL OF PROFILE --> <!-- IN WHICH PROPERTIES DRAGGED -->
                        <div class="content">
                            <form class="pure-form ">
                                <fieldset>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>
    <div class="modal"><!-- Place at bottom of page --></div>
</body>

</html>