<!DOCTYPE html>
<html>

<head>
    <title>Quản lý vùng</title>
    <meta name="application-name" content="AutoForm">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/global-style.css">
    <link rel="stylesheet" href="/stylesheets/style/pure-min.css">
    <link rel="stylesheet" href="/stylesheets/location-style.css">

    <script src="/javascripts/jquery.color.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.js" type="text/javascript"></script>
    <script src="/javascripts/location.js" type="text/javascript"></script>

</head>

<body>
    <div class="container">
        <div class="left">
            <ul class="pure-menu-list menu">
                <li class="pure-menu-item menu-item">

                    <a href="/admin" class="pure-menu-link">
                        <i class="fa fa-bar-chart" aria-hidden="true"></i>Dashboard
                    </a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/account" class="pure-menu-link">
                        <i class="fa fa-users" aria-hidden="true"></i>Quản lý tài khoản</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/field" class="pure-menu-link">
                        <i class="fa fa-info-circle" aria-hidden="true"></i>Trường thông tin</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/form" class="pure-menu-link">
                        <i class="fa fa-book" aria-hidden="true"></i>Quản lý biểu mẫu</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/location" class="pure-menu-link">
                        <i class="fa fa-globe" aria-hidden="true"></i>Quản lý vùng</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/organization" class="pure-menu-link">
                        <i class="fa fa-building" aria-hidden="true"></i>Quản lý tổ chức</a>
                </li>

            </ul>
        </div>
        <div class="right">
            <div class="header">
                <div class="page-name">
                    <h2>Auto form</h2>
                </div>
                <div class="user">
                    <ul class="nav">
                        <li class="nav-user">
                            <a href="#">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <i class="fa fa-sort-desc" aria-hidden="true"></i>
                            </a>
                            <ul class="drop-down">
                                <li>
                                    <i class="fa fa-address-card-o" aria-hidden="true"></i>
                                    <a href="#">Tài khoản</a>
                                </li>
                                <li>
                                    <i class="fa fa-cog" aria-hidden="true"></i>
                                    <a href="#">Cài đặt</a>
                                </li>
                                <li>
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    <a href="#">Đăng xuất</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="main">
                <div class="city">
                    <div class="new-city">
                        <form class="pure-form">
                            <fieldset>
                                <legend>Thêm tỉnh/thành phố</legend>

                                <input id="city-name" name="name" type="text" placeholder="Tên tỉnh/thành phố">

                                <button type="button" class="pure-button pure-button-primary city-add-button">Thêm</button>
                            </fieldset>
                        </form>
                    </div>

                    <div class="city-list">
                        <table class="pure-table pure-table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tỉnh/thành phố</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% var i=0 %>
                                    <% cities.forEach(function(item){ %>
                                        <tr>
                                            <td>
                                                <%= ++i %>
                                            </td>
                                            <td>
                                                <a class="city-item" data-id="<%=item._id%>">
                                                    <%= item.name %>
                                                </a>
                                            </td>
                                        </tr>
                                        <% });%>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="city-detail">
                    <div class="city-info">
                        <style scoped>
                            .button-success,
                            .button-error,
                            .button-warning,
                            .button-secondary {
                                color: white;
                                border-radius: 4px;
                                text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
                            }
                            
                            .button-success {
                                background: rgb(28, 184, 65);
                                /* this is a green */
                            }
                            
                            .button-error {
                                background: rgb(202, 60, 60);
                                /* this is a maroon */
                            }
                            
                            .button-warning {
                                background: rgb(223, 117, 20);
                                /* this is an orange */
                            }
                            
                            .button-secondary {
                                background: rgb(66, 184, 221);
                                /* this is a light blue */
                            }
                        </style>
                        <form class="pure-form info-form">
                            <fieldset>
                                <legend>Thông tin</legend>
                                <input id="id" name="id" type="text" disabled placeholder="ID">
                                <input id="city-name-info" name="name" type="text" placeholder="Tỉnh/thành phố">
                                <button type="button" class="pure-button pure-button-primary update-button">Cập nhật</button>
                                <button type="button" class="pure-button pure-button-primary button-error delete-button">Xóa</button>
                            </fieldset>
                        </form>
                    </div>

                    <div class="district">

                        <div class="new-district">
                            <form class="pure-form">
                                <fieldset>
                                    <legend>Thêm quận/huyện</legend>

                                    <input id="district-name" name="name" type="text" placeholder="Tên quận/huyện">
                                    <select id="of-city" name="cityId">
                                    <% cities.forEach(function(item){ %>
                                        <option data-id="<%=item._id%>"><%=item.name %> </option>
                                    <% });%>
                                    </select>
                                    <button type="button" class="pure-button pure-button-primary district-add-button">Thêm</button>
                                </fieldset>
                            </form>
                        </div>

                        <div class="district-list">
                            <table class="pure-table pure-table-striped">
                                <thead>
                                    <tr>
                                        <th style="width:5%">ID</th>
                                        <th style="width:30%">Quận/huyện</th>
                                        <th style="width:30%">Ngày tạo</th>
                                        <th style="width:35%"></th>
                                    </tr>
                                </thead>

                                <tbody>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>



            </div>
        </div>



    </div>
    <div class="modal"><!-- Place at bottom of page --></div>
</body>

</html>