<!DOCTYPE html>
<html>

<head>
    <title>Quản lý trường dữ liệu</title>
    <meta name="application-name" content="AutoForm">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/global-style.css">
    <link rel="stylesheet" href="/stylesheets/style/pure-min.css">
    <link rel="stylesheet" href="/stylesheets/field-management.css">

    <script src="/javascripts/jquery.color.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('.add-button').click(function () {
                if ($('#name').val()==="") {
                    alert("Tên trường không được để trống");
                }
                else {
                    $.ajax({
                        method: "POST",
                        data: {
                            name: $('#name').val()
                        },
                        success: function () {
                            alert('Thêm thành công ');
                            window.location.reload();
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            alert('Thông tin đã tồn tại');
                        }
                    });
                }


            });
        });
    </script>
</head>

<body>
    <div class="container">
        <div class="left">
            <ul class="pure-menu-list menu">
                <li class="pure-menu-item menu-item">

                    <a href="/admin" class="pure-menu-link">
                        <i class="fa fa-bar-chart" aria-hidden="true"></i>Dashboard
                    </a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/account" class="pure-menu-link">
                        <i class="fa fa-users" aria-hidden="true"></i>Quản lý tài khoản</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/field" class="pure-menu-link">
                        <i class="fa fa-info-circle" aria-hidden="true"></i>Trường thông tin</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/form" class="pure-menu-link">
                        <i class="fa fa-book" aria-hidden="true"></i>Quản lý biểu mẫu</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/location" class="pure-menu-link">
                        <i class="fa fa-globe" aria-hidden="true"></i>Quản lý vùng</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/organization" class="pure-menu-link">
                        <i class="fa fa-building" aria-hidden="true"></i>Quản lý tổ chức</a>
                </li>

            </ul>
        </div>
        <div class="right">
            <div class="header">
                <div class="page-name">
                    <h2>Auto form</h2>
                </div>
                <div class="user">
                    <ul class="nav">
                        <li class="nav-user">
                            <a href="#">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <i class="fa fa-sort-desc" aria-hidden="true"></i>
                            </a>
                            <ul class="drop-down">
                                <li>
                                    <i class="fa fa-address-card-o" aria-hidden="true"></i>
                                    <a href="#">Tài khoản</a>
                                </li>
                                <li>
                                    <i class="fa fa-cog" aria-hidden="true"></i>
                                    <a href="#">Cài đặt</a>
                                </li>
                                <li>
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    <a href="#">Đăng xuất</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="main">
                <div class="new-field">
                    <form class="pure-form pure-form-stacked add-form">
                        <fieldset>
                            <legend>Thêm trường</legend>

                            <label for="name">Tên trường</label>
                            <input name="name" id="name" type="text" placeholder="Field name">

                            <input type="button" class="pure-button pure-button-primary add-button" autofocus value="Thêm">
                        </fieldset>
                    </form>
                </div>

                <div class="field-list">
                    <style scoped>
                        .button-success,
                        .button-error,
                        .button-warning,
                        .button-secondary {
                            color: white;
                            border-radius: 4px;
                            text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
                        }
                        
                        .button-error {
                            background: rgb(202, 60, 60);
                            /* this is a maroon */
                        }
                        
                        .button-warning {
                            background: rgb(223, 117, 20);
                            /* this is an orange */
                        }
                    </style>
                    <Legend>Danh sách trường dữ liệu</Legend>
                    <table class="pure-table pure-table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên trường</th>
                                <th>Thời gian</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% var i=0 %>
                                <% fields.forEach(function(item){ %>
                                    <tr>
                                        <td>
                                            <%= ++i %>
                                        </td>
                                        <td>
                                            <a href="/admin/field/<%=item._id %>">
                                                <%= item.name %>
                                            </a>
                                        </td>
                                        <td>
                                            <%= item.creTime.toUTCString() %>
                                        </td>
                                    </tr>
                                    <% });%>
                        </tbody>
                    </table>
                </div>






            </div>
        </div>



    </div>
</body>

</html>