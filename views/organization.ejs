<!DOCTYPE html>
<html>

<head>
    <title>Quản lý tổ chức</title>
    <meta name="application-name" content="AutoForm">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/global-style.css">
    <link rel="stylesheet" href="/stylesheets/style/pure-min.css">
    <link rel="stylesheet" href="/stylesheets/organization-style.css">

    <script src="/javascripts/jquery.color.js" type="text/javascript"></script>
    <script src="/javascripts//jquery.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('.add-button').click(function () {
                if ($('#name').val() === "") {
                    alert("Tên trường không được để trống");
                }
                else {
                    $.ajax({
                        method: "POST",
                        data: {
                            name: $('#name').val(),
                            phone: $('#phone').val(),
                            district: $('#district').val()
                        },
                        statusCode: {
                            204: function () {
                                alert('Thêm thành công ');
                                window.location.reload();
                            },
                            400: function () {
                                alert('Thông tin đã tồn tại');
                            }
                        }
                    });
                }


            });
        });
    </script>
</head>

<body>
    <div class="container">
        <div class="left">
            <ul class="pure-menu-list menu">
                <li class="pure-menu-item menu-item">

                    <a href="/admin" class="pure-menu-link">
                        <i class="fa fa-bar-chart" aria-hidden="true"></i>Dashboard
                    </a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/account" class="pure-menu-link">
                        <i class="fa fa-users" aria-hidden="true"></i>Quản lý tài khoản</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/field" class="pure-menu-link">
                        <i class="fa fa-info-circle" aria-hidden="true"></i>Trường thông tin</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/form" class="pure-menu-link">
                        <i class="fa fa-book" aria-hidden="true"></i>Quản lý biểu mẫu</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/location" class="pure-menu-link">
                        <i class="fa fa-globe" aria-hidden="true"></i>Quản lý vùng</a>
                </li>
                <li class="pure-menu-item menu-item">
                    <a href="/admin/organization" class="pure-menu-link">
                        <i class="fa fa-building" aria-hidden="true"></i>Quản lý tổ chức</a>
                </li>

            </ul>
        </div>
        <div class="right">
            <div class="header">
                <div class="page-name">
                    <h2>Auto form</h2>
                </div>
                <div class="user">
                    <ul class="nav">
                        <li class="nav-user">
                            <a href="#">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <i class="fa fa-sort-desc" aria-hidden="true"></i>
                            </a>
                            <ul class="drop-down">
                                <li>
                                    <i class="fa fa-address-card-o" aria-hidden="true"></i>
                                    <a href="#">Tài khoản</a>
                                </li>
                                <li>
                                    <i class="fa fa-cog" aria-hidden="true"></i>
                                    <a href="#">Cài đặt</a>
                                </li>
                                <li>
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    <a href="#">Đăng xuất</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="main">
                <div class="new-org">
                    <form class="pure-form pure-form-stacked">
                        <fieldset>
                            <legend>Thêm tổ chức</legend>

                            <label for="name">Tên tổ chức</label>
                            <input id="name" type="text" placeholder="Name">

                            <label for="tel">Điện thoại</label>
                            <input id="phone" type="text" placeholder="Phone">

                            <label for="district">Quận/Huyện</label>
                            <select id="district">
                                <% dists.forEach(function(item){ %>
                                    <option><%=item.name%><option>
                                    <% });%>
                            </select>

                            <button type="button" class="pure-button pure-button-primary add-button">Thêm</button>
                        </fieldset>
                    </form>
                </div>
                <div class="org-list">

                    <Legend>Danh sách tổ chức</Legend>
                    
                    <table class="pure-table pure-table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên tổ chức</th>
                                <th>Điện thoại</th>
                                <th>Thời gian</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% var i=0 %>
                                <% orgs.forEach(function(item){ %>
                                    <tr>
                                        <td>
                                            <%= ++i %>
                                        </td>
                                        <td>
                                            <a href="/admin/organization/<%=item._id %>">
                                                <%= item.name %>
                                            </a>
                                        </td>
                                        <td>
                                            <%= item.phone %>
                                        </td>
                                        <td>
                                            <%= item.creTime.toUTCString() %>
                                        </td>
                                    </tr>
                                    <% });%>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>



    </div>
</body>

</html>